    "blue" : "#4646FF",
    "brightBlack" : "#535755",
    "brightBlue" : "#6f6ff4",
    "brightCyan" : "#50ebfc",
    "brightGreen" : "#1cc470",
    "brightPurple" : "#a97ead",
    "brightRed" : "#cf9e72",
    "brightWhite" : "#eceeee",
    "brightYellow" : "#e2e234",
